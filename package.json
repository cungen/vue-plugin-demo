{
	"name": "vue-plugin-demo",
	"displayName": "vue-plugin-demo",
	"description": "",
	"version": "0.0.1",
	"publisher": "cungen",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"icon": "images/logo.png",
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
        "configuration": {
            "type": "object",
            "title": "Vue插件demo",
            "properties": {
                "vscodePluginDemo.yourName": {
                    "type": "string",
                    "default": "guest",
                    "description": "你的名字"
                },
                "vscodePluginDemo.showTip": {
                    "type": "boolean",
                    "default": true,
                    "description": "启动时显示自定义欢迎页"
                }
            }
        },
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "(VuePlugin)For you always, sir."
            },
            {
                "command": "extension.demo.getCurrentFilePath",
                "title": "(VuePlugin)获取当前文件(夹)路径"
            },
            {
                "command": "extension.demo.testMenuShow",
                "title": "(VuePlugin)的菜单",
                "icon": {
                    "light": "${tools}",
                    "dark": "${tools}"
                }
            },
            {
                "command": "extension.demo.openWebview",
                "title": "(VuePlugin)打开WebView"
            },
            {
                "command": "extension.demo.showWelcome",
                "title": "(VuePlugin)显示自定义欢迎页"
            }
        ],
        "keybindings": [
            {
                "command": "extension.sayHello",
                "key": "ctrl+alt+h",
                "mac": "cmd+alt+h",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.demo.openWebview",
                "key": "ctrl+alt+o",
                "mac": "cmd+alt+o",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "extension.sayHello",
                    "group": "navigation@6"
                },
                {
                    "when": "editorFocus",
                    "command": "extension.demo.getCurrentFilePath",
                    "group": "navigation@5"
                },
                {
                    "when": "editorFocus && resourceLangId == javascript",
                    "command": "extension.demo.testMenuShow",
                    "group": "z_commands"
                },
                {
                    "command": "extension.demo.openWebview",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "when": "editorFocus && resourceLangId == javascript",
                    "command": "extension.demo.testMenuShow",
                    "group": "navigation"
                }
            ],
            "editor/title/context": [
                {
                    "when": "resourceLangId == javascript",
                    "command": "extension.demo.testMenuShow",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.demo.getCurrentFilePath",
                    "group": "navigation"
                },
                {
                    "command": "extension.demo.openWebview",
                    "group": "navigation"
                }
            ]
        },
        "snippets": [
            {
                "language": "vue",
                "path": "./snippets/vue.json"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "VuePlugin",
                    "title": "VuePlugin",
                    "icon": "${symbol-misc}"
                }
            ]
        },
        "views": {
            "VuePlugin": [
                {
                    "id": "utils",
                    "name": "工具库"
                },
                {
                    "id": "components",
                    "name": "组件库"
                },
                {
                    "id": "styles",
                    "name": "样式库"
                }
            ]
        },
        "iconThemes": [
            {
                "id": "VuePluginTheme",
                "label": "(VuePlugin)图标主题",
                "path": "./theme/icon-theme.json"
            }
        ]
    },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
